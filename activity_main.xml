<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="час - дедлайн, с"
            android:ems="10"
            android:id="@+id/deadLineEditText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="макс. к-сть ітерацій"
            android:ems="10"
            android:id="@+id/iterationsCountEditText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/deadLineEditText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="швидкість навчання, δ"
            android:ems="10"
            android:id="@+id/learningSpeedTextEdit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iterationsCountEditText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="Обчислити!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculateButton1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/learningSpeedTextEdit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton1" android:textSize="28sp"/>

</android.support.constraint.ConstraintLayout>